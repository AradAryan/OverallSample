@{
    ViewBag.Title = " پنل کاربر شعبه|ایجاد وام  ";
}

@section js{
    <script src="~/js/viewModel/CrtblBranchUserCreateLoan-v.1.js"></script>

    <script src="~/js/initView/CrtblBranchUserCreateLoan-v.1.js"></script>

    <script>
        var viewModel;
        $(function () {

            viewModel = initVM({

            });
            kendo.bind($('#container'), viewModel);
            initView(viewModel);
        });

    </script>
}



<div class="wide">

    <div class="divRow">
        <h3> ایجاد وام جدید </h3>
        <br />
    </div>

    <form id="Form" data-role="validator" novalidate="novalidate" method="post">
        <section class="well">
            <h2 class="ra-well-title" data-bind="visible: titleIsVisible">اطلاعات مشتری</h2>

            <div>
                <div class="form-horizontal form-widgets col-sm-6">
                    <div class="form-group">
                        <label class="control-label col-sm-4">کد ملی</label>
                        <div class="col-sm-8 col-md-6">
                            <input data-bind="value: nationalCode" class="k-textbox" , style="width: 100%">
                        </div>
                    </div>
                </div>
                <div class="form-horizontal form-widgets col-sm-6">
                    <div class="form-group">
                        <label class="control-label col-sm-4">کد مشتری</label>
                        <div class="col-sm-8 col-md-6">
                            <input data-bind="value: clientCode" class="k-textbox" , style="width: 100%">
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
            <br />
            <div class="buttons-wrap">
                <button type="button" id="searchbtn" class="k-button k-state-default k-primary" data-role="button" data-bind='click: onSearch'>جستجو</button>
            </div>

            <div class="clearfix"></div>
            <br />&nbsp;<br />
            <div class="clearfix"></div>

            <div id="clientinfo">
                <div class="form-horizontal form-widgets col-sm-6">

                    <div class="form-group">
                        <label class="control-label col-sm-4">نام</label>
                        <div class="col-sm-8 col-md-6">
                            <input readonly="true" data-bind="value: firstName" class="k-textbox" , style="width: 100%">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4">نوع مشتری</label>
                        <div class="col-sm-8 col-md-6">
                            <input readonly="true" data-bind="value: custType" class="k-textbox" , style="width: 100%">
                        </div>
                    </div>

                </div>
                <div class="form-horizontal form-widgets col-sm-6">

                    <div class="form-group">
                        <label class="control-label col-sm-4">نام خانوادگی</label>
                        <div class="col-sm-8 col-md-6">
                            <input readonly="true" data-bind="value: lastName" class="k-textbox" , style="width: 100%">
                        </div>
                    </div>

                </div>
            </div>

            <div class="buttons-wrap">
                <br />&nbsp;<br />
            </div>



            <div class="clearfix"></div>
            <br />&nbsp;<br />
            <div class="clearfix"></div>

            <div id="loaninfo">
                <div>
                    <h2 class="ra-well-title" data-bind="visible: titleIsVisible">ایجاد درخواست</h2>
                </div>
                <div>
                    <div class="form-horizontal form-widgets col-sm-6">
                        <div class="form-group">
                            <label class="control-label col-sm-4">مبلغ وام درخواستی</label>
                            <div class="col-sm-8 col-md-6">
                                <input type="number"  data-bind="value: loanAmount" class="k-textbox" , style="width: 100%">
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">مدت زمان بازپرداخت</label>
                            <div class="col-sm-8 col-md-6">
                                <input data-bind="value: givebackTime" class="k-textbox" , style="width: 100%">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-4">نوع وام در خواستی</label>
                            <div class="col-sm-8 col-md-6">
                                <select id="loantype" name="loantype" data-role="dropdownlist" data-bind="source: loanTypeDS, value: loanTypeId" data-value-field="Id" data-text-field="Title" class="x1"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>
                <br />&nbsp;<br />
                <div class="clearfix"></div>

                <div class="">
                    <button type="button" id="submitLoan" class="k-button k-state-default k-primary" data-role="button" data-bind='click: onSubmitLoan'>ثبت</button>
                </div>

            </div>

        </section>
    </form>
</div>
