@{
    ViewBag.Title = "مدیریت سوال های متداول";
}

@section js{


    <script src="~/js/viewModel/FaqManagment-v.1.js"></script>

    <script src="~/js/initView/FaqManagment-v.1.js"></script>

    <script>
        var viewModel;
        $(function () {

            viewModel = initVM({

            });
            kendo.bind($('#container'), viewModel);
            initView(viewModel);
        });

    </script>


}


<h3>مدیریت سوالات متداول</h3>

<div class="wide">
    <form id="Form" data-role="validator" novalidate="novalidate" method="post">
        <section class="well">
            <h2 class="ra-well-title" data-bind="visible: titleIsVisible">جزِییات پرسش-پاسخ</h2>
            <div class="clearfix"></div>
            <div>
                <div class="form-horizontal form-widgets col-sm-6">
                    <div class="form-group">
                        <label class="control-label col-sm-4">پرسش</label>
                        <div class="col-sm-8 col-md-6">
                            <textarea rows="3" data-bind="value: questionText" class="k-textbox" , style="width: 100%"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">پاسخ</label>
                        <div class="col-sm-8 col-md-6">
                            <textarea rows="5" data-bind="value: answerText" class="k-textbox x1"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4">وضعیت نمایش</label>
                        <div class="col-sm-8 col-md-6">
                            <select id="activity" name="activity" data-role="dropdownlist" data-bind="source: activityDS, value: activityId" data-value-field="Id" data-text-field="Title" class="x1"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4">برای سامانه ی :</label>
                        <div class="col-sm-8 col-md-6">
                            <select id="samane" name="samane" data-role="dropdownlist" data-bind="source: samaneDS, value: samaneId" data-value-field="Id" data-text-field="Title" class="x1"></select>
                        </div>
                    </div>

                    <div>

                        <input name="files" id="files" type="file" aria-label="files" data-bind="click: onSelectFiles"/>

                    </div>
                </div>

            </div>



            <div class="clearfix"></div>

<br />
            <div class="buttons-wrap">
                <button type="button" id="searchbtn" class="k-button k-state-default k-primary" data-role="button" data-bind='click: onSearch'>جستجو</button>
                <button type="button" id="newuserbtn" class="k-button k-state-default k-primary" data-role="button" data-bind='click: onNewUser'>ایجاد مورد جدید</button>
            </div>
            <div class="clearfix"></div>
            <br />&nbsp;<br />
            <div class="clearfix"></div>
            <div>
                <h4>لیست تمام پرسش-پاسخ ها</h4>
                <div id="grid"></div>
            </div>


        </section>
    </form>
</div>