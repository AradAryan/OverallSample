@{
    ViewBag.Title = "لیست آزمایشگاه ها";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
    ViewData["page-path"] = "آزمایشگاه|لیست آزمایشگاه ها";
}
<script>
    var viewModel;
    $(function () {
        viewModel = initVm({
            searchUrl: '@Url.Action("Search")',
            editUrl: '@Url.Action("Edit")',
            assignmentsUrl: '@Url.Action("Assignments")',
            usersUrl: '@Url.Action("CorpUsers", "UserManager")'
        });
        addCorpLevels(viewModel);
        kendo.bind($("#container"), viewModel);
        initView(viewModel);
    });
</script>
<div class="wide">
    <form id="Form" data-role="validator" novalidate="novalidate" action="@Url.Action("Search")" method="post">
        <section class="well">
            <h2 class="ra-well-title">جستجو بر اساس</h2>
            <div class="clearfix"></div>
            <div>
                <div class="form-horizontal form-widgets col-sm-6">
                    @Html.Partial("CorpLevel")
                </div>
                <div class="form-horizontal form-widgets col-sm-6">
                    <div class="form-group">
                        <label class="control-label col-sm-4">نام آزمایشگاه</label>
                        <div class="col-sm-8 col-md-6">
                            <input id="paper" name="paper" data-bind="value:name" class="k-textbox x1" maxlength="10" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">شناسه در سپاس</label>
                        <div class="col-sm-8 col-md-6">
                            <input id="name" name="name" data-bind="value:guid" class="k-textbox x1" maxlength="50" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="buttons-wrap">
                <button type="button" id="nextStep" class="k-button k-state-default k-primary" data-role="button" data-bind='click: onSearch'>جستجو</button>
            </div>
            <div class="clearfix"></div>
            <br />&nbsp;<br />
            <div class="clearfix"></div>
            <div>
                <h4>نتایج جستجو: لیست آزمایشگاه ها</h4>
                <div id="grid"></div>
            </div>


        </section>
    </form>
</div>

<script src="~/js/initView/LabCorp-v.3.js"></script>
<script src="~/js/viewModel/LabCorp-v.3.js"></script>

@Html.Partial("notification")