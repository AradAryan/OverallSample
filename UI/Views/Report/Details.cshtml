@model DAL.Patient
@{
    ViewBag.Title = "مشاهده جزییات سندروم ثبت شده";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}

<form id="UserForm" data-role="validator" novalidate="novalidate">
    <section class="well">
        <h2 class="ra-well-title">اطلاعات ثبت شده بیمار</h2>


        <div class="form-horizontal form-widgets col-sm-6">
            <div class="form-group">
                <label class="control-label col-sm-4">نام</label>
                <div class="col-sm-8 col-md-6">
                    <input type="text" class="k-textbox" value="@Model.FirstName" />
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-4">نام پدر</label>
                <div class="col-sm-8 col-md-6">
                    <input type="text" class="k-textbox" value="@Model.FirstNameFather" />
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-4">جنسیت</label>
                <div class="col-sm-8 col-md-6">

                    @if (Model.GenderID == 1)
                    {
                        <input type="text" class="k-textbox" value="مرد" />
                    }
                    else
                    {
                        <input type="text" class="k-textbox" value="زن" />
                    }

                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-4">تلفن(همراه)</label>
                <div class="col-sm-8 col-md-6">
                    <input type="text" class="k-textbox" value="@Model.CellPhone" />
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-4">نوع سندروم</label>
                <div class="col-sm-8 col-md-6">
                    <input type="text" class="k-textbox" value="@ViewData["SyndromType"]" />
                </div>

            </div>
            @if (!String.IsNullOrEmpty(Model.FullAddress))
            {
                <div class="form-group">
                    <label class="control-label col-sm-4">آدرس</label>
                    <div class="col-sm-8 col-md-6">
                        <input type="text" class="k-textbox" value="@Model.FullAddress" />
                    </div>

                </div>
            }

        </div>





        <div class="form-horizontal form-widgets col-sm-6">
            <div class="form-group" id="NationalCodeTextBox">
                <label class="control-label col-sm-4">کد ملی</label>
                <div class="col-sm-8 col-md-6">
                    <input type="text" class="k-textbox" value="@Model.NationalCode" />
                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">نام خانوادگی</label>
                <div class="col-sm-8 col-md-6">
                    <input type="text" class="k-textbox" value="@Model.LastName" />
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-4">تاریخ تولد</label>
                <div class="col-sm-8 col-md-6">
                    <input type="text" class="k-textbox" value="@Model.BirthDate" />
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-4">ملیت</label>
                <div class="col-sm-8 col-md-6">
                    @if (Model.NationalityID == 11)
                    {
                        <input type="text" class="k-textbox" value="ایرانی" />
                    }
                    else
                    {
                        <input type="text" class="k-textbox" value="غیر ایرانی" />
                    }

                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-4">تلفن(ثابت)</label>
                <div class="col-sm-8 col-md-6">
                    <input type="text" class="k-textbox" value="@Model.TelPhone" />
                </div>

            </div>
            @*<div class="form-group">
                     <label class="control-label col-sm-4">تاریخ ثبت سندروم</label>
                    <div class="col-sm-8 col-md-6">
                        <input name="FinishDate" id="FinishDate" value="@Model.PersianDate" class="k-textbox"  required="required" validationMessage="پر کردن فیلد تاریخ تکمیل فرم الزامیست"/>
                    </div>

                </div>*@
        </div>
        <div class="clearfix"></div>
    </section>
</form>